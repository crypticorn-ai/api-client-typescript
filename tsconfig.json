{
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist", "src/dev.ts", "scripts/generate.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  }
}

